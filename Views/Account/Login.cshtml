
@model SRPA.Models.LoginViewModel
@using SRPA.Models
@{
    ViewBag.Title = "SRPA - Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Form</title>
    <link rel="stylesheet" href="~/Content/styledoc.css">
</head>
<body>
    <br />
    <!-- Header -->
    <!-- Main content -->
    <div style="background-color: #ffffff; height: 100vh; display: flex; justify-content: center; align-items: center;">
        @using (Html.BeginForm("Login", "Account"))
        {
            @Html.AntiForgeryToken()

            <!-- Your form content here -->
            <div style="background-color: #E0E0E0; width: 738px; padding: 20px; border-radius: 8px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); display: flex; flex-direction: column; align-items: center;">
                <!-- Login Text -->
                <p style="color: #1A5653; font-size: 64px; font-weight: bold; margin-bottom: 20px;">تسجيل الدخول</p>

                <!-- Username Input -->
                <label style="display: block; margin-bottom: 8px; width: 100%; box-sizing: border-box; direction: rtl; color: #1A5653;">الايميل:</label>

                @Html.TextBoxFor(m => m.Email, new { style = "width: 638px; padding: 8px; margin-bottom: 16px; box-sizing: border-box;" })

                <!-- Password Input -->
                <label style="display: block; margin-bottom: 8px; width: 100%; box-sizing: border-box;">Password:</label>
                <div style="position: relative; width: 100%; box-sizing: border-box;">
                    @Html.PasswordFor(m => m.Password, new { style = "width: 100%; padding: 8px; margin-bottom: 16px; box-sizing: border-box;" })
                    <span style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%); cursor: pointer;">
                        <!-- Eye icon -->
                    </span>
                </div>

                <!-- Remember Me Checkbox -->
                <div style="display: flex; align-items: center; margin-bottom: 16px; width: 100%; box-sizing: border-box;">
                    @Html.CheckBoxFor(m => m.RememberMe, new { style = "margin-right: 8px;" })
                    <label style="width: 100%; box-sizing: border-box;">Remember me</label>
                </div>

                <!-- Login Button -->
                <button type="submit" style="width: 100%; padding: 10px; background-color: #107869; color: #fff; border: none; border-radius: 4px; cursor: pointer; box-sizing: border-box;">Login</button>

                <!-- Forgot Password Link -->
                <a href="#" style="color: #696969; margin-top: 10px;">Forgot Password?</a>
            </div>
        }
    </div>

    <script src="~/Scripts/script.js"></script>
</body>
</html>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
